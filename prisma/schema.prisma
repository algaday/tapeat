generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email String @unique
  password  String

  firstName String
  lastName  String
  username String @unique
  
  owner RestaurantOwner?
  customer Customer?

}

model RestaurantOwner {
  id String @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  userId String @unique @db.Uuid
  user   User @relation(fields: [userId], references: [id])
  restaurant Restaurant?
}

model Customer{
  id String @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  address String
  userId String @unique @db.Uuid
  user User @relation(fields: [userId], references: [id])
  orders Order[]
}

model Restaurant{
  id String @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  name String
  address String
  ownerId String @unique @db.Uuid
  orderId String? @unique @db.Uuid
  owner RestaurantOwner @relation(fields: [ownerId], references: [userId])
  orders Order[]
  menus MenuItem[]
}

model MenuItem{
  id String @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  nameOfDish String
  category String
  description String
  price Decimal @db.Decimal(12,2)
  restaurantId String @db.Uuid
  imageId String @db.Uuid
  restaurant Restaurant @relation(fields: [restaurantId], references: [id])
  orderLines OrderLine[]
  image Image @relation(fields: [imageId], references: [id])
  modifications MenuItemWithModification[]
}

model Image{
  id String @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  restaurantId String? @db.Uuid
  originalPath String
  thumbnailPath String?
  isAssigned Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  menuItems MenuItem[]
}

model MenuItemWithModification{
  id String @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  menuItemId String @db.Uuid
  modificationId String @db.Uuid
  price Decimal @db.Decimal(12,2)
  menuItem MenuItem @relation(fields: [menuItemId], references: [id])
  modification Modification @relation(fields: [modificationId], references: [id])
}

model Modification {
  id String @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  name String @unique
  price Decimal @db.Decimal(12,2) @default(0)
  groupName String
  menuItems MenuItemWithModification[]
}

model Order{
  id String @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  customerId String @db.Uuid 
  restaurantId String @db.Uuid
  orderDate DateTime @default(now())
  status String
  totalAmount Int
  freeDelivery Boolean    @default(false)
  address String
  restaurant Restaurant @relation(fields: [id], references: [orderId])
  customer Customer @relation(fields: [customerId],references: [id])
  orderLines OrderLine[]
}

model OrderLine{
  id String @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  menuItemId String @db.Uuid
  orderId String @db.Uuid 
  quantity Int
  totalPrice Int
  menuItem MenuItem @relation(fields: [menuItemId],references: [id])
  order Order @relation(fields: [orderId],references: [id])
}