generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email String @unique
  password  String

  firstName String
  lastName  String
  username String @unique
  
  owner RestaurantOwner?
  customer Customer?

}

model RestaurantOwner {
  id Int @id @default(autoincrement())
  userId Int @unique
  user   User @relation(fields: [userId], references: [id])
  restaurant Restaurant?
}

model Customer{
  id Int @id @default(autoincrement())
  address String
  userId Int @unique
  user User @relation(fields: [userId], references: [id])
  orders Order[]
}

model Restaurant{
  id String @id @default(uuid())
  name String
  address String
  ownerId Int @unique
  orderId Int? @unique
  owner RestaurantOwner @relation(fields: [ownerId], references: [userId])
  orders Order[]
  menus MenuItem[]
}

model MenuItem{
  id Int @id @default(autoincrement())
  nameOfDish String
  category String
  description String
  price Decimal @db.Decimal(12,2)
  restaurantId String 
  imageId String
  restaurant Restaurant @relation(fields: [restaurantId], references: [id])
  modificationGroups ModificationGroup[]   
  orderLines OrderLine[]
  image Image @relation(fields: [imageId], references: [id])
}

model Image{
  id String @id @default(uuid())
  originalPath String
  thumbnailPath String?
  isAssigned Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  menuItems MenuItem[]
}

model ModificationGroup {
  id Int @id @default(autoincrement())
  name String
  menuItemId Int
  menuItem MenuItem @relation(fields: [menuItemId], references: [id])
  modifications Modification[]
  @@unique([name, menuItemId])
}

model Modification {
  id Int @id @default(autoincrement())
  modificationGroupId Int
  name String
  price Decimal @db.Decimal(12,2) @default(0)
  modificationGroup ModificationGroup @relation(fields: [modificationGroupId], references: [id])
  @@unique([modificationGroupId, name])
}

model Order{
  id Int @id @default(autoincrement())
  customerId Int 
  restaurantId Int
  orderDate DateTime @default(now())
  status String
  totalAmount Int
  freeDelivery Boolean    @default(false)
  address String
  restaurant Restaurant @relation(fields: [id], references: [orderId])
  customer Customer @relation(fields: [customerId],references: [id])
  orderLines OrderLine[]
}

model OrderLine{
  id Int @id @default(autoincrement())
  menuItemId Int 
  orderId Int 
  quantity Int
  totalPrice Int
  menuItem MenuItem @relation(fields: [menuItemId],references: [id])
  order Order @relation(fields: [orderId],references: [id])
}
